<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_view"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <ImageView
            android:id="@+id/iv_user1"
            app:layout_constraintTop_toTopOf="@id/poker_outside_bg"
            app:layout_constraintLeft_toLeftOf="@id/poker_outside_bg"
            android:src="@drawable/ic_boy"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <ImageView
            android:id="@+id/iv_user2"
            app:layout_constraintTop_toTopOf="@id/poker_outside_bg"
            app:layout_constraintRight_toRightOf="@id/poker_outside_bg"
            android:src="@drawable/ic_boy"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <ImageView
            android:id="@+id/iv_user3"
            app:layout_constraintBottom_toBottomOf="@id/poker_outside_bg"
            app:layout_constraintRight_toRightOf="@id/poker_outside_bg"
            android:src="@drawable/ic_boy"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <ImageView
            android:id="@+id/iv_user4"
            app:layout_constraintBottom_toBottomOf="@id/poker_outside_bg"
            app:layout_constraintLeft_toLeftOf="@id/poker_outside_bg"
            android:src="@drawable/ic_boy"
            android:layout_width="70dp"
            android:layout_height="70dp"/>





        <ImageView
            android:id="@+id/poker_outside_bg"
            android:scaleType="fitXY"
            android:src="@drawable/ic_poker_table"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="80dp"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/tv_center_info"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="梅花三 先出!!"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/poker_outside_bg"
            app:layout_constraintBottom_toBottomOf="@id/poker_outside_bg"
            app:layout_constraintLeft_toLeftOf="@id/poker_outside_bg"
            app:layout_constraintRight_toRightOf="@id/poker_outside_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
