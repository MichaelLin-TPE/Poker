<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600dp"
    android:layout_height="400dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_confirm_dialog_bg">

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_user1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_girl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_user2"
        app:layout_constraintTop_toBottomOf="@id/title" />
    
    <LinearLayout
        android:id="@+id/user1_card_list_view"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_user1"
        app:layout_constraintBottom_toBottomOf="@id/iv_user1"
        app:layout_constraintLeft_toRightOf="@id/iv_user1"
        app:layout_constraintRight_toLeftOf="@id/tv_user4_check"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </LinearLayout>

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user1_check"
        android:text="@string/check"
        app:layout_constraintTop_toTopOf="@id/iv_user1"
        app:layout_constraintBottom_toBottomOf="@id/iv_user1"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user1_win"
        android:text="@string/win"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/iv_user1"
        app:layout_constraintBottom_toBottomOf="@id/iv_user1"
        app:layout_constraintLeft_toRightOf="@id/iv_user1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/iv_user2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_boy2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_user3"
        app:layout_constraintTop_toBottomOf="@id/iv_user1" />

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user2_win"
        android:text="@string/win"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/iv_user2"
        app:layout_constraintBottom_toBottomOf="@id/iv_user2"
        app:layout_constraintLeft_toRightOf="@id/iv_user2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/user2_card_list_view"
        app:layout_constraintTop_toTopOf="@id/iv_user2"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_user2"
        app:layout_constraintLeft_toRightOf="@id/iv_user2"
        app:layout_constraintRight_toLeftOf="@id/tv_user4_check"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </LinearLayout>

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user2_check"
        android:text="@string/check"
        app:layout_constraintTop_toTopOf="@id/iv_user2"
        app:layout_constraintBottom_toBottomOf="@id/iv_user2"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_user3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_boy1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_user4"
        app:layout_constraintTop_toBottomOf="@id/iv_user2" />

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user3_win"
        android:text="@string/win"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/iv_user3"
        app:layout_constraintBottom_toBottomOf="@id/iv_user3"
        app:layout_constraintLeft_toRightOf="@id/iv_user3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/user3_card_list_view"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_user3"
        app:layout_constraintBottom_toBottomOf="@id/iv_user3"
        app:layout_constraintLeft_toRightOf="@id/iv_user3"
        app:layout_constraintRight_toLeftOf="@id/tv_user4_check"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </LinearLayout>

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user3_check"
        android:text="@string/check"
        app:layout_constraintTop_toTopOf="@id/iv_user3"
        app:layout_constraintBottom_toBottomOf="@id/iv_user3"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_user4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_boy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_confirm"
        app:layout_constraintTop_toBottomOf="@id/iv_user3" />

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user4_win"
        android:text="@string/win"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/iv_user4"
        app:layout_constraintBottom_toBottomOf="@id/iv_user4"
        app:layout_constraintLeft_toRightOf="@id/iv_user4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/user4_card_list_view"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/iv_user4"
        app:layout_constraintBottom_toBottomOf="@id/iv_user4"
        app:layout_constraintLeft_toRightOf="@id/iv_user4"
        app:layout_constraintRight_toLeftOf="@id/tv_user4_check"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </LinearLayout>

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_user4_check"
        android:text="@string/check"
        app:layout_constraintTop_toTopOf="@id/iv_user4"
        app:layout_constraintBottom_toBottomOf="@id/iv_user4"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.michael.cardgame.custom.CardTextView
        android:id="@+id/tv_confirm"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="再玩一把"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>