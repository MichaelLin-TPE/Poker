<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_choose_game_mode_bg"
    android:layout_width="400dp"
    android:layout_height="230dp">

    <ImageView
        android:id="@+id/iv_single_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_online_play"
        android:layout_marginVertical="20dp"
        android:src="@drawable/ic_single_player"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_online_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_single_play"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_online_play"
        android:layout_marginEnd="30dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>