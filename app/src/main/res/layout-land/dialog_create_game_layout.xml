<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/ic_confirm_dialog_bg"
        android:layout_width="400dp"
        android:layout_height="250dp">

        <EditText
            android:id="@+id/ed_game_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/ed_game_name_bg"
            android:textSize="16sp"
            android:autofillHints="false"
            android:hint="@string/room_name"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.michael.cardgame.custom.CardTextView
            android:id="@+id/tv_info1"
            android:text="@string/betting_value"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/ed_game_name"
            app:layout_constraintLeft_toLeftOf="@id/ed_game_name"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/ed_betting_value"
            app:layout_constraintTop_toTopOf="@id/tv_info1"
            app:layout_constraintBottom_toBottomOf="@id/tv_info1"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ed_game_name_bg"
            android:textSize="16sp"
            android:autofillHints="false"
            android:inputType="number"
            android:hint="@string/input_one_to_thousand"
            android:paddingHorizontal="10dp"
            android:maxLines="1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_info1"
            android:paddingVertical="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <com.michael.cardgame.custom.CardTextView
            android:id="@+id/create_game_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/create_game"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/customer_login_bg"
            android:layout_width="0dp"
            android:layout_height="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
